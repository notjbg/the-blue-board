p{margin-bottom:12px}
.header{border-bottom:1px solid var(--ua-border);padding:20px 0 16px;margin-bottom:24px}
.header .nav{font-size:11px;color:var(--ua-muted);margin-bottom:12px}
.header .nav a{color:var(--ua-accent);font-size:11px}
.subtitle{font-size:12px;color:var(--ua-muted)}
.hub-grid{display:grid;grid-template-columns:1fr;gap:16px;margin-bottom:32px}
.hub-card{background:var(--ua-panel);border:1px solid var(--ua-border);border-radius:8px;padding:20px;transition:border-color .2s}
.hub-card:hover{border-color:var(--ua-blue)}
