.hub-card .hub-name{font-size:14px;font-weight:600;margin:4px 0 2px}
.hub-card .hub-info{font-size:11px;color:var(--ua-muted);margin-bottom:10px}
.hub-card .hub-link{display:inline-block;background:var(--ua-blue);color:#fff;padding:6px 16px;border-radius:4px;font-size:11px;font-weight:600;text-decoration:none;letter-spacing:.5px}
.hub-card .hub-link:hover{background:#0069c0;text-decoration:none}
.cta-block{background:var(--ua-panel);border:1px solid var(--ua-border);border-radius:8px;padding:20px;text-align:center;margin-bottom:32px}
.cta-block .cta{display:inline-block;background:var(--ua-blue);color:#fff;padding:10px 24px;border-radius:4px;font-size:12px;font-weight:600;text-decoration:none;margin-top:8px}
